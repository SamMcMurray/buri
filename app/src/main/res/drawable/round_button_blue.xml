<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#f7f2f2"/>
            <stroke android:width="8px" android:color="#f7f2f2" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/settings_button"/>
            <stroke android:width="8px" android:color="@color/button_border"/>
        </shape>
    </item>
</selector>